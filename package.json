{
  "name": "vscode-tako",
  "displayName": "tako",
  "description": "helps you become a better octopus",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tako-gui",
          "title": "Tako GUI",
          "icon": "assets/party-parrot.gif"
        }
      ]
    },
    "views": {
      "tako-gui": [
        {
          "id": "tako-menu",
          "name": "Menu",
          "icon": "assets/party-parrot.gif"
        },
        {
          "id": "tako-branch",
          "name": "Branches",
          "icon": "assets/party-parrot.gif"
        },
        {
          "id": "pull-requests",
          "name": "Pull Requests",
          "icon": "assets/party-parrot.gif"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-tako.helloWorld",
        "title": "Tako: Hello World"
      },
      {
        "command": "vscode-tako.debugGit",
        "title": "Tako: Debug Git"
      },
      {
        "command": "vscode-tako.checkout",
        "title": "Tako: Checkout"
      },
      {
        "command": "vscode-tako.syncWithMainBranch",
        "title": "Tako: Sync with Main Branch"
      },
      {
        "command": "vscode-tako.refreshBranches",
        "title": "Tako: Refresh Branch List",
        "icon": "assets/party-parrot.gif"
      },
      {
        "command": "vscode-tako.changeMainBranch",
        "title": "Tako: Change Main Branch"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-tako.refreshBranches",
          "when": "view == tako-gui && viewItem == tako-branch",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vscode-tako.checkout",
          "when": "view == tako-gui && viewItem == tako-branch",
          "group": "inline"
        },
        {
          "command": "vscode-tako.refreshBranches",
          "when": "view == tako-gui && viewItem == tako-branch"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
